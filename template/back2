\begin{lstlisting}[language=JuliaLocal, style=julia]
using Distributions

function thompson_sampling(ğ›‚, ğ›ƒ, apply; T=100)
    for t in 1:T
        ğ›‰ = rand.(Beta.(ğ›‚, ğ›ƒ))
        x = argmax(ğ›‰)
        r = apply(x)
        ğ›‚[x], ğ›ƒ[x] = (ğ›‚[x] + r, ğ›ƒ[x] + 1 - r) # Comment
    end
    return Beta.(ğ›‚, ğ›ƒ)
end
\end{lstlisting}
